<form action="#" method="post">

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label for="voyageName">Nom de votre voyage</label>
            </div>
            <div class="col-md-8">
                <input type="text" class="form-control" id="voyageName"
                       required="required"
                       placeholder="Tour du monde">
                <div id="errorBlockName" class="error-block hidden">Veuillez choisir un nom pour votre voyage.</div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label for="destination">Lieu de départ</label>
            </div>
            <div class="col-md-8">
                {% include 'AppBundle:Destination:selectDestination.html.twig' %}
                <span id="errorBlockDestination" class="error-block hidden">Veuillez choisir une destination de départ.</span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label for="deparatureDate">Date de départ</label>
            </div>
            <div id="deparatureDate" class="col-md-8">
                <div id="deparatureDateContainer"></div>
                <span id="errorBlockDeparatureDate" class="error-block hidden">Veuillez choisir une date de départ.</span>
            </div>
        </div>
    </div>

    <div class="row">
        {% if isUpdate is defined and isUpdate == true %}
            <div class="col-md-6 col-md-offset-3">
                <button type="submit" id="_submit" class="btn btn-raised btn-primary pull-right" name="_submit"
                        data-loading-text="Chargement ...">
                    <i class="fa fa-floppy-o"></i> Enregistrer
                </button>
                <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal"
                        data-loading-text="Chargement ...">Fermer
                </button>
            </div>
        {% else %}
            <div class="col-md-4 col-md-offset-4">
                <button type="submit" id="_submit" class="btn btn-raised btn-primary" name="_submit"
                        data-loading-text="Création du voyage en cours ...">
                    <i class="fa fa-globe"></i> Commencer votre voyage
                </button>
            </div>
        {% endif %}
    </div>

</form>


