<div class="container-fluid containerOrange containerTitleDashboard">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-1 col-sm-5 page-header" style="margin-top: 0;">
            <h1><em>{{ voyage.name }}</em></h1>
        </div>
        <div class="col-lg-6 col-sm-7 ">
            <div class="row">
                <div class="col-xs-12">
                    <h3>Date et lieu de d√©part</h3>
                </div>
                <div class="col-xs-4">
                    <p class="lead">
                        {{ voyage.startDestination.name }}
                    </p>
                </div>
                <div class="col-xs-5">
                    <p class="lead">{{ voyage.startDate|localizeddate('none', 'none', 'fr_FR', null, 'd MMMM Y') }}</p>
                </div>
                {% block modifyBtn %}
                    <div class="col-xs-3">
                        <button type="button" class="btn btn-raised btn-primary btn-sm pull-right"
                                data-toggle="modal" data-target="#updateVoyageModal">
                            <i class="fa fa-pencil"></i><span class="hidden-sm hidden-xs"> Modifier</span>
                        </button>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
</div>
