{% extends "::layout.html.twig" %}

{% block title %}
    {{ voyage.name }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/calculator.min.css') }}">
{% endblock %}


{% block body %}
    <div id="shareVoyage">

        {% include 'CalculatorBundle:Share:shareVoyageHeader.html.twig' %}

        <div class="container-fluid">
            <div class="container">
                <div class="row" style="padding-top: 30px; padding-bottom: 30px;">
                    <div class="col-md-12">
                        <div id="gmap"></div>
                    </div>
                </div>

            </div>
        </div>

        {% include 'CalculatorBundle:Voyage:dashboardDestinationsList.html.twig' with {'hidePrices' : not voyage.showPricesInPublic, 'allowModification' : false} %}

        {% include 'CalculatorBundle:Voyage:dashboardStats.html.twig' with {'hidePrices' : not voyage.showPricesInPublic} %}

    </div>
{% endblock %}


{% block footer %}
    {{ parent() }}
    {#{% include 'AppBundle:Common:listCountries.html.twig' %}#}
{% endblock %}


{% block javascripts %}
    <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
    {{ parent() }}
    <script src="{{ asset('assets/maplace-js/dist/maplace.min.js') }}"></script>
    <script>
        var maplaceData = {{ maplaceData|raw }};
    </script>
    <script src="{{ asset('js/shareVoyage.min.js') }}"></script>
{% endblock %}
