<div class="col-md-4 col-sm-6 containerPadding15 {% if divClass is defined %}{{ divClass }}{% endif %}">

    <a href="{% if linkShare %}{{ url('shareVoyage', {'token' : voyage.token}) }}{% else %}{{ url('voyage', {'token' : voyage.token}) }}{% endif %}">
        <div class="row">
            <div class="col-xs-12">
                {% if stats.mainDestinations[0].type == 'destination' %}
                    {% set imageUrl = image_banner_destinations_path ~ stats.mainDestinations[0].slug ~ '.JPG' %}
                {% else %}
                    {% set imageUrl = image_banner_countries_path ~ stats.mainDestinations[0].slug ~ '.JPG' %}
                {% endif %}
                <img src="{{ asset(imageUrl) }}"
                     class="img-responsive img-thumbnail"
                     alt="{{ stats.mainDestinations[0].name }}"
                     data-toggle="tooltip" data-placement="top" title="{{ stats.mainDestinations[0].name }}">
            </div>
            {% if stats.mainDestinations|length > 2 %}
                {% if stats.mainDestinations[1].type == 'destination' %}
                    {% set imageUrl = image_banner_destinations_path ~ stats.mainDestinations[1].slug ~ '.JPG' %}
                {% else %}
                    {% set imageUrl = image_banner_countries_path ~ stats.mainDestinations[1].slug ~ '.JPG' %}
                {% endif %}
                <div class="col-xs-6 imageLeft">
                    <img src="{{ asset(imageUrl) }}"
                         class="img-responsive img-thumbnail"
                         alt="{{ stats.mainDestinations[1].name }}"
                         data-toggle="tooltip" data-placement="left" title="{{ stats.mainDestinations[1].name }}">
                </div>
                {% if stats.mainDestinations[2].type == 'destination' %}
                    {% set imageUrl = image_banner_destinations_path ~ stats.mainDestinations[2].slug ~ '.JPG' %}
                {% else %}
                    {% set imageUrl = image_banner_countries_path ~ stats.mainDestinations[2].slug ~ '.JPG' %}
                {% endif %}
                <div class="col-xs-6 imageRight">
                    <img src="{{ asset(imageUrl) }}"
                         class="img-responsive img-thumbnail"
                         alt="{{ stats.mainDestinations[2].name }}"
                         data-toggle="tooltip" data-placement="right" title="{{ stats.mainDestinations[2].name }}">
                </div>
            {% endif %}
        </div>

        <h2 class="text-center ellipsis">{{ voyage.name }}</h2>
    </a>

    <div class="text-center">
        <span class="label label-warning">{{ stats.nbDays }} jours</span>
        <span class="label label-success">{{ stats.totalCost|number_format(0, ',', ' ') }} &euro;</span>
    </div>

</div>
