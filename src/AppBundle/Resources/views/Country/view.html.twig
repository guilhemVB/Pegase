{% set activeDestinations = true %}
{% extends "::layout.html.twig" %}

{% block metaDescription %}Pays - {{ country.name }}{% endblock %}
{% block metaKeyword %}, pays, {{ country.name }}{% endblock %}


{% block title %}
    {{ country.name }} - {{ parent() }}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/bootstrap-social.css') }}">
{% endblock %}


{% block body %}
    <div id="countryView">

        {% set bannerAssetURL = image_banner_countries_path ~ country.slug ~ '.JPG' %}
        {% set bannerUrl = image_banner_default %}
        {% if bannerAssetURL|asset_exists %}
            {% set bannerUrl = bannerAssetURL %}
        {% endif %}

        <img src="{{ asset(bannerUrl) }}" class="img-responsive" alt="{{ country.name }}">

        <div class="container-fluid">
            <div class="container page-header">
                <div class="row">
                    <div class="col-sm-10">
                        <h1>
                            {{ country.name }}
                        </h1>
                    </div>
                    <div class="col-sm-2">
                        <img src="http://www.geonames.org/flags/x/{{ country.codeAlpha2|lower }}.gif"
                             class="img-responsive pull-right hidden-xs flagCountry" alt="drapeau {{ country.name }}">
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid containerMap">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 destinationsCountryList">
                        <div class="row">
                            {% for destination in country.destinations %}
                                <div class="col-md-12 col-sm-6 col-xs-6 containerPadding15">
                                    {% include 'AppBundle:Vignette:destinationContent.html.twig' %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div id="gmap"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid containerGrey containerPadding">
            <div class="container">

                <div class="row">
                    <h2>Statistiques</h2>

                    <div class="col-md-2">
                        Population
                    </div>
                    <div class="col-md-2">
                        {{ country.population|number_format(0, ',', ' ') }} habitants
                    </div>
                </div>

            </div>
        </div>

        {% include 'AppBundle:Country:countryShare.html.twig' %}

    </div>
{% endblock %}


{% block javascripts %}
    <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
    {{ parent() }}
    <script src="{{ asset('/js/maplace.js') }}"></script>
    <script>
        var maplaceData = {{ maplaceData|raw }};
    </script>
    <script src="{{ asset('bundles/app/js/country/maplaceCountry.js') }}"></script>
    <script src="{{ asset('bundles/app/js/country/country.js') }}"></script>

{% endblock %}


