{% extends "::layout.html.twig" %}

{% block title %}
    {{ country.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div id="countryView">

        {% set bannerAssetURL = image_banner_countries_path ~ country.slug ~ '.JPG' %}
        {% set bannerUrl = image_banner_default %}
        {% if bannerAssetURL|asset_exists %}
            {% set bannerUrl = bannerAssetURL %}
        {% endif %}

        <div class="container-fluid containerBanner"
             style="background-image: url('{{ asset(bannerUrl) }}');">
        </div>

        <div class="container-fluid">
            <div class="container page-header">
                <h1>
                    {{ country.name }}
                </h1>
            </div>
        </div>

        <div class="container-fluid containerMap">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div id="controls"></div>
                    </div>
                    <div class="col-md-8">
                        <div id="gmap"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid containerGrey containerPadding">
            <div class="container">

                <div class="row">
                    <div class="col-md-8">
                        <h2>Description</h2>

                        <p>{{ country.description }}</p>
                    </div>
                    <div class="col-md-4">
                        <h2>Pensez-y !</h2>

                        <p>{{ country.tips }}</p>
                    </div>
                </div>

            </div>
        </div>

        <div class="container-fluid containerPadding">
            <div class="container">
                <h2>Destination{% if country.destinations|length > 1 %}s{% endif %}</h2>
                <div class="row">
                    {% for destination in country.destinations %}
                        {% include 'AppBundle:Destination:linkToDestination.html.twig' %}
                    {% endfor %}
                </div>

            </div>
        </div>

    </div>
{% endblock %}


{% block javascripts %}
    <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
    {{ parent() }}
    <script src="{{ asset('/js/maplace.js') }}"></script>
    <script>
        var maplaceData = {{ maplaceData|raw }};
    </script>
    <script src="{{ asset('bundles/app/js/country/maplaceCountry.js') }}"></script>
    <script src="{{ asset('bundles/app/js/country/country.js') }}"></script>

{% endblock %}


