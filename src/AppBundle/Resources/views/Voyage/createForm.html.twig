<form action="#" method="post">

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label for="voyageName">Nom de votre voyage</label>
            </div>
            <div class="col-md-8">
                <input type="text" class="form-control" id="voyageName"
                       required="required"
                       placeholder="Tour du monde">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label for="destination">Lieu de départ</label>
            </div>
            <div class="col-md-8">
                {% include 'AppBundle:Destination:selectDestination.html.twig' %}
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label for="deparatureDate">Date de départ</label>
            </div>
            <div id="deparatureDate" class="col-md-5">
                <div></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <button type="submit" id="_submit" class="btn btn-primary" name="_submit"
                    data-loading-text="Création du voyage en cours ...">
                <i class="fa fa-globe"></i> Commencer votre voyage
            </button>
        </div>
    </div>

</form>


