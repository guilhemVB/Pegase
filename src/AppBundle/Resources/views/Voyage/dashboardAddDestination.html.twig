<div class="container-fluid" id="containerAddDestination">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 id="addDestinationHeader">Ajouter une destination</h3>

                        <form class="form-inline">
                            <div class="row">
                                <div class="form-group col-sm-5">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <label id="labelDestination" for="addDestination">Destination</label>
                                        </div>
                                        <div class="col-sm-8">
                                            {% include 'AppBundle:Destination:selectDestination.html.twig' with {'selectId' : 'addDestination'} %}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="numberDays">Nombre de jours</label>
                                    {% include 'AppBundle:Destination:selectNbDays.html.twig' %}
                                </div>
                                <div class="col-sm-2">
                                    <button type="submit" class="btn btn-default btn-success"
                                            data-loading-text="Chargement ...">
                                        <i class="fa fa-plus"></i> Ajouter
                                    </button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
