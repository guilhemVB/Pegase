{% extends "::layout.html.twig" %}

{% block title %}
    Création de votre voyage - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/datepicker.css') }}">

{% endblock %}

{% block body %}
    <div class="container-fluid">

        <form class="text-center">
            <div class="row" style="padding: 100px 30px 100px 30px; background-color: chocolate; color: #ffffff;">
                <div class="col-sm-offset-4 col-sm-4">
                    <div class="form-group">
                        <label for="voyageName" style="display: block; margin-bottom: 20px;"><h3>Nom de votre
                                voyage</h3></label>
                        <input type="text" class="form-control input-lg" id="voyageName"
                               style="text-align: center; font-size: 20px;" placeholder="Tour du monde">
                    </div>
                </div>
            </div>
            <div class="row" style="padding: 30px; background-color: #3D3D3D; color: #ffffff;">
                <div class="col-sm-offset-4 col-sm-4">
                    <div class="form-group">
                        <label for="numberTravellers" style="display: block; margin-bottom: 20px;"><h3>Nombre de voyageurs</h3></label>
                        <select class="form-control input-lg" id="numberTravellers">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row" style="padding: 30px;">
                <div class="col-sm-offset-1 col-sm-4">
                    <div class="form-group">
                        <label for="deparatureDate" style="display: block; margin-bottom: 20px;"><h3>Date de départ</h3></label>
                        <input type="text" value="02-16-2012" id="deparatureDate">
                    </div>
                </div>
            </div>
        </form>

    </div>

{% endblock %}


{% block javascripts %}
    {#<script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>#}
    {{ parent() }}
    <script src="{{ asset('/js/bootstrap-datepicker.js') }}"></script>
    {#<script>#}
    {#var maplaceData = {{ maplaceData|raw }};#}
    {#</script>#}
    <script src="{{ asset('bundles/app/js/voyage/voyage.js') }}"></script>
{% endblock %}


