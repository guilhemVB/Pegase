{% extends "::layout.html.twig" %}

{% block metaDescription %}Contacter le Monde en Sac{% endblock %}
{% block metaKeyword %}, contact{% endblock %}

{% block title %}
    Contact - {{ parent() }}
{% endblock %}


{% block body %}

    <div class="container-fluid containerOrange containerPadding containerContact">
        <div class="container">
            <div class="row">

                <div class="col-sm-3 col-sm-offset-1">
                    <h1>Contact</h1>
                </div>

                <div class="col-sm-6 col-sm-offset-1">

                    <form action="#" method="post">

                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" class="form-control" id="email" required="required" style="max-width: 350px;"/>
                        </div>

                        <div class="form-group">
                            <label for="subject">Sujet *</label>
                            <input type="text" class="form-control" id="subject" required="required" style="max-width: 350px;"/>
                        </div>

                        <div class="form-group">
                            <label for="message">Message *</label>
                            <textarea id="message" class="form-control" rows="10"></textarea>
                        </div>


                        <div>
                            <button type="submit" id="_submit" class="btn btn-primary" name="_submit">
                                <i class="fa fa-envelope"></i> Envoyer
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>


    <div style="height: 200px;"></div>
    {#{% include 'AppBundle:Vignette:vignettesContact.html.twig' %}#}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        var sendEmailUrl = "{{ path('sendEmail') }}";
    </script>
    <script src="{{ asset('bundles/app/js/contact/contact.js') }}"></script>
{% endblock %}


