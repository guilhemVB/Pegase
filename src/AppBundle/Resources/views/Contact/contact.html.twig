{% extends "::layout.html.twig" %}

{% block metaDescription %}Contacter Le Monde en Sac pour proposer ou demander une destination, ou simplement nous encourager.{% endblock %}
{% block metaKeyword %}, contact, proposer une destination{% endblock %}

{% block title %}
    Contact - {{ parent() }}
{% endblock %}


{% block body %}

    <div class="container-fluid containerPadding containerContact">
        <div class="row">

            <div class="col-sm-3 col-sm-offset-1 col-lg-2 col-lg-offset-2 page-header">
                <h1>Contact</h1>
            </div>

            <div class="col-sm-6 col-sm-offset-1 col-lg-5 col-lg-offset-1">

                <form action="#" method="post">

                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" class="form-control" id="email" required="required"
                               style="max-width: 350px;"/>
                    </div>

                    <div class="form-group">
                        <label for="subject">Sujet *</label>
                        <input type="text" class="form-control" id="subject" required="required"
                               style="max-width: 350px;"/>
                    </div>

                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" class="form-control" rows="10"></textarea>
                    </div>


                    <div>
                        <button type="submit" id="_submit" class="btn btn-raised btn-primary" name="_submit">
                            <i class="fa fa-envelope"></i> Envoyer
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <div class="container-fluid containerPadding containerOrange containerWhite">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-sm-12">
                {% for destination in destinations %}
                    {% include 'AppBundle:Vignette:destinationLarge.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        var sendEmailUrl = "{{ path('sendEmail') }}";
    </script>
    <script src="{{ asset('js/contact.min.js') }}"></script>
{% endblock %}


