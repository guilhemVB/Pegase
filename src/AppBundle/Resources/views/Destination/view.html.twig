{% extends "::layout.html.twig" %}

{% block title %}
    {{ destination.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row">

            <div class="jumbotron">
                <div class="container">
                    <h1>
                        <a href="{{ path('country', {'slug' : destination.country.slug }) }}">{{ destination.country.name }}</a>
                        /
                        {{ destination.name }}
                    </h1>
                </div>
            </div>
        </div>

        <div class="row" style="padding: 30px">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-4" id="btnAddToVoyage">
                        {{ btnAddToVoyage | raw }}
                    </div>
                </div>
                <br>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">A voir</h2>
                    </div>
                    <div class="panel-body">
                        <p>{{ destination.tips }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div id="gmap"></div>
            </div>
        </div>


        <div class="row" style="padding: 30px; background-color: #4C84B2; color: white;">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <blockquote>
                            <h4>
                                Coût moyen de la vie sur place<span
                                        class="pull-right label label-danger">{{ destination.prices.accommodation + destination.prices['life cost'] }}
                                    €</span>
                            </h4>
                            <footer style="color: silver;">
                                Prix moyen de l'hébergement<span
                                        class="pull-right label label-primary">{{ destination.prices.accommodation }}
                                    €</span>
                            </footer>
                            <footer style="color: silver;">
                                Dépenses quotidiennes moyenne<span
                                        class="pull-right label label-primary">{{ destination.prices['life cost'] }}
                                    €</span>
                            </footer>
                        </blockquote>
                    </div>


                    <div class="col-md-12">
                        <h2>Description</h2>
                    </div>
                </div>

                <p>{{ destination.description }}</p>
            </div>
            <div class="col-md-4">
                <h2>Périodes</h2>

                <div class="row" style="color: #000000;">
                    <div class="col-sm-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Janvier
                        <span class="badge">
                            {% for i in 1..destination.periods.january %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Février
                        <span class="badge">
                            {% for i in 1..destination.periods.february %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Mars
                        <span class="badge">
                            {% for i in 1..destination.periods.march %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Avril
                        <span class="badge">
                            {% for i in 1..destination.periods.april %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Mai
                        <span class="badge">
                            {% for i in 1..destination.periods.may %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Juin
                        <span class="badge">
                            {% for i in 1..destination.periods.june %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Juillet
                        <span class="badge">
                            {% for i in 1..destination.periods.july %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Août
                        <span class="badge">
                            {% for i in 1..destination.periods.august %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Septembre
                        <span class="badge">
                            {% for i in 1..destination.periods.september %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Octobre
                        <span class="badge">
                            {% for i in 1..destination.periods.october %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Novembre
                        <span class="badge">
                            {% for i in 1..destination.periods.november %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                            <li class="list-group-item">
                                Décembre
                        <span class="badge">
                            {% for i in 1..destination.periods.december %}
                                <i class="glyphicon glyphicon-star"></i>
                            {% endfor %}
                        </span>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

        </div>
    </div>

    {% include 'AppBundle:Destination:addToVoyage.html.twig' %}

{% endblock %}


    {% block javascripts %}
        <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
        {{ parent() }}
        <script src="{{ asset('/js/maplace.js') }}"></script>
        <script>
            var maplaceData = {{ maplaceData|raw }};
            var addStageUrl = "{{ path('addStage', {'id' : destination.id}) }}";
            var removeStageUrl = "{{ path('removeStage', {'id' : 0}) }}";
        </script>
        <script src="{{ asset('bundles/app/js/destination/maplaceDestination.js') }}"></script>
        <script src="{{ asset('bundles/app/js/destination/destination.js') }}"></script>

    {% endblock %}


