{% extends "::layout.html.twig" %}

{% block title %}
    {{ destination.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row">

            <div class="jumbotron">
                <div class="container">
                    <h1>
                        <a href="{{ path('country', {'slug' : destination.country.slug }) }}">{{ destination.country.name }}</a>
                        /
                        {{ destination.name }}
                    </h1>
                </div>
            </div>
        </div>

        <div class="row" style="padding: 30px">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-4" id="btnAddToVoyage">
                        {{ btnAddToVoyage | raw }}
                    </div>
                </div>
                <br>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">A voir</h2>
                    </div>
                    <div class="panel-body">
                        <p>{{ destination.tips }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div id="gmap"></div>
            </div>
        </div>


        <div class="row" style="padding: 30px; background-color: #4C84B2; color: white;">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <blockquote>
                            <h4>
                                Coût moyen de la vie sur place<span
                                        class="pull-right label label-danger">{{ destination.prices.accommodation + destination.prices['life cost'] }}
                                    €</span>
                            </h4>
                            <footer style="color: silver;">
                                Prix moyen de l'hébergement<span
                                        class="pull-right label label-primary">{{ destination.prices.accommodation }}
                                    €</span>
                            </footer>
                            <footer style="color: silver;">
                                Dépenses quotidiennes moyenne<span
                                        class="pull-right label label-primary">{{ destination.prices['life cost'] }}
                                    €</span>
                            </footer>
                        </blockquote>
                    </div>


                    <div class="col-md-12">
                        <h2>Description</h2>
                    </div>
                </div>

                <p>{{ destination.description }}</p>
            </div>
            <div class="col-md-4">
                <h2>Périodes</h2>

                <div class="row" style="color: #000000;">
                    <div class="col-sm-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Janvier
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.january } %}
                            </li>
                            <li class="list-group-item">
                                Février
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.february } %}
                            </li>
                            <li class="list-group-item">
                                Mars
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.march } %}
                            </li>
                            <li class="list-group-item">
                                Avril
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.april } %}
                            </li>
                            <li class="list-group-item">
                                Mai
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.may } %}
                            </li>
                            <li class="list-group-item">
                                Juin
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.june } %}
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Juillet
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.july } %}
                            </li>
                            <li class="list-group-item">
                                Août
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.august } %}
                            </li>
                            <li class="list-group-item">
                                Septembre
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.september } %}
                            </li>
                            <li class="list-group-item">
                                Octobre
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.october } %}
                            </li>
                            <li class="list-group-item">
                                Novembre
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.november } %}
                            </li>
                            <li class="list-group-item">
                                Décembre
                            {% include 'AppBundle:Destination:starts.html.twig' with {'nbStarts' : destination.periods.december } %}
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

        </div>
    </div>

    {% include 'AppBundle:Destination:addToVoyage.html.twig' %}

{% endblock %}


    {% block javascripts %}
        <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
        {{ parent() }}
        <script src="{{ asset('/js/maplace.js') }}"></script>
        <script>
            var maplaceData = {{ maplaceData|raw }};
            var addStageUrl = "{{ path('addStage', {'id' : destination.id}) }}";
            var removeStageUrl = "{{ path('removeStage', {'id' : 0}) }}";
        </script>
        <script src="{{ asset('bundles/app/js/destination/maplaceDestination.js') }}"></script>
        <script src="{{ asset('bundles/app/js/destination/destination.js') }}"></script>

    {% endblock %}


