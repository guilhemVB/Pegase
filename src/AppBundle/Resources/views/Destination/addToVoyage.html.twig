<div id="addToVoyageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajout de la destination <span id="destinationNameModal"></span> Ã  votre voyage</h4>
            </div>
            <div class="modal-body">
                <h5>Combien de jours souhaitez-vous rester sur place ?</h5>
                <select class="form-control input-lg" id="numberDays">
                    <option value="1">1 jour</option>
                    {% for i in 2..60 %}
                        <option value="{{ i }}">{{ i }} jours</option>
                    {% endfor %}
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                <button id="addToVoyageBtn" type="button" class="btn btn-success" data-dismiss="modal">Valider</button>
            </div>
        </div>
    </div>
</div>
