<div id="addToVoyageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajout de la destination "<span class="destinationNameModal"></span>" à votre voyage</h4>
            </div>
            <div class="modal-body">
                <h5>Combien de jours souhaitez-vous rester sur place ?</h5>
                {% include 'AppBundle:Destination:selectNbDays.html.twig' with { 'classNbSelect' : ''} %}
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-group btn-group-justified btn-group-raised">

                            <a href="javascript:void(0)" type="submit" id="addToVoyageBtn" class="btn btn-primary"
                               data-dismiss="modal"
                               name="_submit">
                                <i class="fa fa-floppy-o"></i> Ajouter
                            </a>
                            <a href="javascript:void(0)" type="button" class="btn btn-danger" data-dismiss="modal">
                                Annuler
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="removeFromVoyageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Retrait de la destination "<span class="destinationNameModal"></span>" de votre voyage</h4>
            </div>
            <div class="modal-body">
                <ul>
                    <li>Nombre de jour : <span id="nbDaysRemoveFromVoyageModal"></span></li>
                    <li>Etape numéro <span id="positionRemoveFromVoyageModal"></span> dans votre voyage</li>
                </ul>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-group btn-group-justified btn-group-raised">

                            <a href="javascript:void(0)" type="submit" id="removeFromVoyageBtn"
                               class="btn btn-primary"
                               data-dismiss="modal"
                               name="_submit">
                                Valider
                            </a>
                            <a href="javascript:void(0)" type="button" class="btn btn-danger" data-dismiss="modal">
                                Annuler
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
