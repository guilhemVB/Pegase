{#doc : https://github.com/select2/select2-bootstrap-theme #}
<select class="form-control input-lg" id="destination" style="width: 100%;">
    <option></option>
    {% for country in countries %}
        <optgroup label="{{ country.name }}">
            {% for destination in country.destinations %}
                <option value="{{ destination.id }}">{{ destination.name }}</option>
            {% endfor %}
        </optgroup>
    {% endfor %}
</select>
