{% set activeDestinations = true %}
{% extends "::layout.html.twig" %}

{% block metaDescription %}Liste des destinations référencées sur Le Monde en Sac. Japon, Etas-Unis, Vietnam, Argentine, Cambodge, Hongrie ...{% endblock %}
{% block metaKeyword %}, liste, liste des destinations{% endblock %}

{% block title %}
    Liste des destinations - {{ parent() }}
{% endblock %}

{% set title = "Liste des destinations du Monde en Sac" %}

{% set bannerMartiniqueUrl = image_banner_homepage_path ~ 'martinique.JPG' %}
{% block opengraph %}
    {{ parent() }}
    <meta property="og:title" content="{{ title }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="{{ absolute_url(asset(bannerMartiniqueUrl)) }}"/>
{% endblock %}


{% block tweeterCard %}
    {{ parent() }}
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="Liste de pays du Monde en Sac">
    <meta name="twitter:image" content="{{ absolute_url(asset(bannerMartiniqueUrl)) }}">
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/select2/select2.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/select2-bootstrap-css/select2-bootstrap.min.css') }}">
{% endblock %}

{% block body %}
    <div id="destinationsListView">

        <div class="container-fluid backgroundWhite borderBotOrange containerPadding15">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1">
                    <h1 class="titleOrange">
                        Liste des destinations
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">

                    <form action="#" method="post">

                        <div class="form-group" id="formGroupDestinations">

                            <div class="input-group input-group-lg select2-bootstrap-append">
                                {% include 'AppBundle:Destination:selectDestination.html.twig'
                                with {'classSelect' : 'input-lg',
                                'selectId' : 'searchDestination',
                                'addCountrySelected' : true,
                                'hidePartial' : true} %}

                                <span class="input-group-btn">
                                    <button id="btnSeeDestination" class="btn btn-raised btn-primary" type="button">
                                        Voir <i class="fa fa-chevron-right"></i>
                                    </button>
                                </span>
                            </div>


                        </div>

                    </form>

                </div>
            </div>
        </div>


        <div class="container-fluid containerPadding">
            <div class="row">
                <div class="col-sm-12">
                    <div class="gmapPadding">
                        <div id="gmap"></div>
                    </div>
                    <div class="col-sm-12 text-center">
                        <p><img src="http://maps.google.com/mapfiles/marker.png"> : Fiche destination complète. <img src="http://labs.google.com/ridefinder/images/mm_20_orange.png"> : Fiche destination en cours d'écriture.</p>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}


{% block javascripts %}
    <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
    {{ parent() }}
    <script src="{{ asset('assets/maplace-js/dist/maplace.min.js') }}"></script>
    <script>
        var maplaceData = {{ maplaceData|raw }};
    </script>
    <script src="{{ asset('assets/select2/select2.min.js') }}"></script>
    <script src="{{ asset('assets/select2/select2_locale_fr.js') }}"></script>
    <script src="{{ asset('js/destinationList.min.js') }}"></script>
{% endblock %}
