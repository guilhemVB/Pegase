    </div>

{% endblock %}


{% block footer %}
    {{ parent() }}
    {% include 'AppBundle:Common:listCountries.html.twig' with {'addDestinations' : true} %}
{% endblock %}


{% block javascripts %}
    <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
    {{ parent() }}
    <script src="{{ asset('/js/maplace.js') }}"></script>
    <script>
        var maplaceData = {{ maplaceData|raw }};
    </script>
    <script src="{{ asset('/js/select2/select2.js') }}"></script>
    <script src="{{ asset('/js/select2/select2_locale_fr.js') }}"></script>
    <script src="{{ asset('bundles/app/js/destination/listDestinations.js') }}"></script>
