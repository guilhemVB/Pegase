{% set activeDestinations = true %}
{% extends "::layout.html.twig" %}

{% block metaDescription %}Liste des destinations référencées sur Le Monde en Sac. Japon, Etas-Unis, Vietnam, Argentine, Cambodge, Hongrie ...{% endblock %}
{% block metaKeyword %}, liste, liste des destinations{% endblock %}

{% block title %}
    Liste des destinations - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/select2/select2.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/select2/select2-bootstrap.css') }}">
{% endblock %}

{% block body %}
    <div id="destinationsListView">

        <div class="container-fluid containerOrange">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 page-header">
                        <h1>
                            Liste des destinations
                        </h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid containerOrange containerPadding">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">

                        <form action="#" method="post">

                            <div class="form-group" id="formGroupDestinations">

                                <div class="input-group input-group-lg select2-bootstrap-append">
                                    {% include 'AppBundle:Destination:selectDestination.html.twig'
                                    with {'classSelect' : 'input-lg',
                                    'selectId' : 'searchDestination',
                                    'addCountrySelected' : true} %}

                                    <span class="input-group-btn">
                                        <button id="btnSeeDestination" class="btn btn-primary" type="button">
                                            Voir <i class="fa fa-chevron-right"></i>
                                        </button>
                                    </span>
                                </div>


                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>


        <div class="container-fluid containerPadding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div id="gmap"></div>
                    </div>
                </div>
            </div>
        </div>


