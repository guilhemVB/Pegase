<div class="container-fluid footer containerPadding15">
    <div class="row">
        <div class="col-sm-12 text-center socialIconsFooter">
            {% include 'AppBundle:Common:socialIcons.html.twig' %}
        </div>
    </div>

    <div class="row" id="listCountries">
        <div class="col-lg-10 col-lg-offset-1 columnsFooter">
            {% for country in countries %}
                <ul class="country">
                    <li>
                        <a href="{{ url('country', {'slug' : country.slug }) }}">{{ country.name }}</a>

                        <ul>
                            {% for destination in country.destinations %}
                                <li class="footerDestination"><a href="{{ url('destination', {'slug' : destination.slug }) }}">{{ destination.name }}</a></li>
                            {% endfor %}
                        </ul>

                    </li>
                </ul>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-lg-offset-1 clearfix">
            <p>Site créé par Laura Cucchietti et <a href="http://guilhembourgoin.com/" target="_blank">Guilhem
                    Bourgoin</a>
                <a href="{{ path('contact') }}" class="pull-right"><i class="fa fa-envelope"></i> Contact</a>
            </p>
        </div>
        <div class="col-lg-10 col-lg-offset-1">
            <p class="text-center">
                <i class="fa fa-copyright"></i> Copyright 2016
            </p>
        </div>
    </div>
</div>
