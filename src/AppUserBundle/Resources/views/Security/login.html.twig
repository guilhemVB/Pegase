{% extends "::layout.html.twig" %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container-fluid containerOrange">
        <div class="container">
            <div class="row">

                <div class="col-sm-3 col-sm-offset-1">
                    <h1>Connexion</h1>
                </div>

                <div class="col-sm-4 col-sm-offset-1">

                    {% include 'AppUserBundle:Security:connectionForm.html.twig' %}

                    {% if error %}
                        <p class="text-center ">
                            <strong>Nom d'utilisateur ou mot de passe incorrect</strong>
                        </p>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        {% include 'AppBundle:Vignettes:vignettesLogin.html.twig' %}
    </div>

{% endblock %}
