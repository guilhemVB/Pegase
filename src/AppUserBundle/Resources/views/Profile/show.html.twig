{% set title = "Profil" %}
{% set description = "Profil de l'utilisateur" %}
{% set type = "website" %}
{% set imageUrl = image_banner_homepage_path ~ 'temple_raw.JPG' %}

{% set activeProfile = true %}
{% extends "::layout.html.twig" %}


{% block body %}

    {% for flashMessage in app.session.flashbag.get('fos_user_success') %}
        <div class="container-fluid containerBlue containerPadding">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
                    <p class="flash-notice text-center lead">
                        {{ flashMessage|trans({}, 'FOSUserBundle') }}
                    </p>

                    <p class="text-center">
                        <i class="fa fa-3x fa-check"></i>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="container-fluid containerPadding">
        <div class="row">

            <div class="col-sm-4 col-sm-offset-1 col-lg-4 col-lg-offset-1 page-header">
                <h1>Votre profil</h1>
            </div>

            <div class="col-sm-6 col-sm-offset-1 col-lg-4 col-lg-offset-1">
                <div class="well">
                    <div class="fos_user_user_show">
                        <div class="containerPadding15">
                            <h4>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</h4>

                            <p>{{ user.username }}</p>
                        </div>

                        <div class="containerPadding15">
                            <h4>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</h4>

                            <p>{{ user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hidden-md hidden-sm hidden-xs">
        <div style="height: 100px;"></div>
    </div>

    <div class="container-fluid containerPadding containerOrange containerLinkWhite">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-sm-12">
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'barcelone' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'katmandou' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'phnom-penh' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'saint-petersbourg' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'san-jose' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'ushuaia' })) }}
            </div>
        </div>
    </div>

{% endblock %}
