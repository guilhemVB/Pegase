{% set activeProfile = true %}
{% extends "::layout.html.twig" %}

{% block title %}
    Modification du mot de passe - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container-fluid containerPadding">
        <div class="row">

            <div class="col-sm-4 col-sm-offset-1 col-lg-4 col-lg-offset-1 page-header">
                <h1>Changement de votre mot de passe</h1>
            </div>

            <div class="col-sm-6 col-sm-offset-1 col-lg-4 col-lg-offset-1">
                <div class="well">
                    {% include 'AppUserBundle:ChangePassword:changePassword_content.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <div class="hidden-md hidden-sm hidden-xs">
        <div style="height: 80px;"></div>
    </div>

    <div class="container-fluid containerPadding containerOrange containerLinkWhite">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-sm-12">
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'bangkok' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'buenos-aires' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'san-francisco' })) }}
            </div>
        </div>
    </div>

{% endblock %}

