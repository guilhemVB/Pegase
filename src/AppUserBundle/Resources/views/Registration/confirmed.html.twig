{% set activeProfile = true %}
{% extends "::layout.html.twig" %}

{% block title %}
    Inscription Validée - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container-fluid containerBlue containerPadding">

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">

                <p class="text-center lead">
                    Bienvenu {{ user.username }}, votre inscription est terminé, vous pouvez désormais commencer à
                    créer votre voyage.
                </p>

            </div>

        </div>

        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="text-center">
                    <a class="btn btn-raised btn-success" href="{{ path('dashboard') }}" role="button">Commencer <i
                            class="fa fa-globe"></i></a>
                </div>

            </div>
        </div>
    </div>

    <div class="hidden-md hidden-sm hidden-xs">
        <div style="height: 150px;"></div>
    </div>

    <div class="container-fluid containerPadding">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-sm-12">
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'barcelone' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'katmandou' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'phnom-penh' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'saint-petersbourg' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'san-jose' })) }}
                {{ render(controller('AppBundle:Vignette:get', { 'slug': 'ushuaia' })) }}
            </div>
        </div>
    </div>

    <div class="hidden-md hidden-sm hidden-xs">
        <div style="height: 50px;"></div>
    </div>

{% endblock %}
